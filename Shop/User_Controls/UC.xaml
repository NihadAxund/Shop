<UserControl x:Class="Shop.User_Controls.UC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shop.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300" MinWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="7*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Label VerticalAlignment="Center" Name="ID_LBL" FontSize="15" Foreground="Black">1</Label>
        <Label VerticalAlignment="Center" Name="ProductName_LBL" Grid.Column="1" FontSize="15" Foreground="Black">1</Label>
        <Label VerticalAlignment="Center" Name="CategoryId_LBL" Grid.Column="2" FontSize="15" Foreground="Black">1</Label>
        <Label VerticalAlignment="Center" Name="UnitPrice_LBL" Grid.Column="3" FontSize="15" Foreground="Black">1</Label>
        <Label VerticalAlignment="Center" Name="UnitsInStock_LBL" Grid.Column="4" FontSize="15" Foreground="Black">1</Label>

    </Grid>
</UserControl>
